#ifndef BOOK_H_
#define BOOK_H_
#include "Item.h"

class Book : public Item
{
public:
	Book();
	Book(string n, string d, int i, string t, string a, int cr): Item(n, d, i)
	{title = t; author = a; crDate = cr;}

	virtual ~Book();

	void setTitle(string t){title = t;}
	void setAuthor(string a){author = a;}
	void setCRDate(int d){crDate = d;}

	string getTitle()const{return title;}
	string getAuthor()const{return author;}
	int    getCRDate()const{return crDate;}

	friend ostream& operator <<(ostream& out,const Book& book)
	{
		out << book.item
			<< setw(12) << "Title: "  << book.title  << endl
			<< setw(12) << "Author: " << book.author << endl
			<< setw(12) << "Copyright Date: " << book.crDate << endl;

		return out;
	}
private:
	string title;
	string author;
	int    crDate;
};

#endif
