#ifndef MOVIE_H_
#define MOVIE_H_
#include "Item.h"
class Movie : public Item
{
public:
	Movie();
	Movie(string n, string d, int i, string t, string di, vector<string> c): item(n, d, i)
	{title = t; director = di; cast = c;}
	virtual ~Movie();

	void setTitle(string t){title = t;}
	void setDirector(int d){director = d;}
	void setCast(vector<string> c){cast = c;}
	
	string getTitle(){return title;}
	int    getDirector(){return director;}
	vector<string> getCast(){return cast;}
	
	friend ostream operator <<(ostream& out, Movie movie)
	{
		out << movie.item
			<< setw(12) << "Title: "    << movie.title    << endl
			<< setw(12) << "Director: " << movie.director << endl
			<< setw(12) << "Main Actors: ";
		for(auto& i : movie.cast)
		{
			out << i << ", ";
		}
		out << endl;

		return out;
	}

private:
	string title;
	string director;
	vector<string> cast;
	Item item;
};

#endif
